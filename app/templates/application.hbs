<!-- google fonts -->
<link href='http://fonts.googleapis.com/css?family=Open+Sans:300,600' rel='stylesheet' type='text/css'>


<!-- Fixed navbar -->
<nav class="navbar navbar-default navbar-fixed-top">
  <div class="container">
    <div class="navbar-header">
      
      
    </div>
    <div id="navbar">
      <p class="navbar-text timer">
		  {{resusTimerStr}}
	  </p>
	  {{#if arrestMode}}
			<button {{action "endArrest"}} class="btn btn-default navbar-btn">ROSC</button>
		{{else}}
			<button {{action "startArrest"}} class="btn btn-default navbar-btn">Cardiac Arrest</button>
		{{/if}}
      
    </div><!--/.nav-collapse -->
  </div>
</nav>


<!-- Columns for ABCDE... -->
<div class="container-fluid resus-main-columns">
	<div class="row">
		
		
		{{#each category in model}}
			{{render "category" category}}
		{{/each}}
		
		
		

	</div>
</div>


<!-- Team bar -->
<div class="team-bar">
	{{render "team"}}
</div>


<!-- event log -->
<footer class="resus-event-log">
	<div class="container-fluid">
		<ul>
			{{#each record in records}}
				{{record-entry record=record}}
			{{/each}}
			<li>
				{{input value=newCustomRecordText placeholder="Add new event"}}
				<button {{action 'saveCustomRecord'}}>
					Save
				</button>
			</li>
		</ul>
	</div>
</footer>